{
  "name": "bcr-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "mobile": "npm run start -w @bcr-app/mobile",
    "mobile:android": "npm run android -w @bcr-app/mobile",
    "mobile:ios": "npm run ios -w @bcr-app/mobile",
    "api": "cd packages/api && python -m uvicorn src.main:app --reload --host 0.0.0.0 --port 8000",
    "api:dev": "cd packages/api && python -m uvicorn src.main:app --reload",
    "dev": "concurrently \"npm run api:dev\" \"npm run mobile\"",
    "shared:build": "npm run build -w @bcr-app/shared",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}